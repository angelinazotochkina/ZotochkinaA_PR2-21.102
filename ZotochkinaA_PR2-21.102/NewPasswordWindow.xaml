<Window x:Class="ZotochkinaA_PR2_21._102.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZotochkinaA_PR2_21._102"
        mc:Ignorable="d"
        Title="NewPasswordWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="1,50,1,0">
            <TextBlock Grid.Row="0" Text="Напишите новый пароль:" Width="231"/>
            <PasswordBox x:Name="txtNewPassword" Width="231"/>
            <TextBlock Text="Подтвердите пароль:" Width="231"/>
            <PasswordBox x:Name="txtConfirmPassword" Width="231"/>
            <Button Content="Сохранить" Click="SaveNewPassword_Click" Width="231" Margin="1,20,1,0"/>
        </StackPanel>

    </Grid>
</Window>
